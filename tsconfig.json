{
  "compileOnSave": false,
  "outDir": "./dist/",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "index.ts",
    "server/**/*",
    "mongodb_scripts/**/*",
    "models/**/*"
  ],
  "exclude": [
    "src"
  ]
}